<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans default-autowire="byName">

	<!-- 登录登出的Action -->
	<bean id="login" class="cn.xdf.controller.action.common.LoginAction"
		scope="prototype">
	</bean>
	<!-- 用户个人信息Action -->
	<bean id="userInfo" class="cn.xdf.controller.action.common.UserAction"
		scope="prototype">
	</bean>


	<!-- 日志 action -->
	<bean id="logsAction" class="cn.xdf.controller.action.logs.LogsAction"
		scope="prototype">
		<property name="logsService">
			<ref bean="logsService" />
		</property>
	</bean>

	<!-- 字典 action -->
	<bean id="dictAction" class="cn.xdf.controller.action.dict.DictAction"
		scope="prototype">
		<property name="dictService">
			<ref bean="dictService" />
		</property>
	</bean>

	<!-- 省 action -->
	<bean id="provinceAction" class="cn.xdf.controller.action.province.ProvinceAction"
		scope="prototype">
		<property name="provinceService">
			<ref bean="provinceService" />
		</property>
	</bean>

	<!-- 市 action -->
	<bean id="cityAction" class="cn.xdf.controller.action.city.CityAction"
		scope="prototype">
		<property name="cityService">
			<ref bean="cityService" />
		</property>
	</bean>

	<!-- 区 action -->
	<bean id="areaAction" class="cn.xdf.controller.action.area.AreaAction"
		scope="prototype">
		<property name="areaService">
			<ref bean="areaService" />
		</property>
	</bean>

	<!-- 登录登出的Action -->
	<bean id="reportAction" class="cn.xdf.controller.action.report.ReportAction"
		scope="prototype">
	</bean>

	<!-- 磁盘文件 action -->
	<bean id="diskFileAction" class="cn.xdf.controller.action.diskFile.DiskFileAction"
		scope="prototype">
		<property name="diskFileService">
			<ref bean="diskFileService" />
		</property>
	</bean>
	<!-- 资源 action -->
	<bean id="resourcesAction" class="cn.xdf.controller.action.resources.ResourcesAction"
		scope="prototype">
		<property name="resourcesService">
			<ref bean="resourcesService" />
		</property>
		<property name="resourceActionService">
			<ref bean="resourceActionService" />
		</property>
	</bean>
	<!-- 资源动作 action -->
	<bean id="resourceActionAction"
		class="cn.xdf.controller.action.resourceAction.ResourceActionAction"
		scope="prototype">
		<property name="resourceActionService">
			<ref bean="resourceActionService" />
		</property>
	</bean>
	<!-- 块管理 action -->
	<bean id="blocksAction" class="cn.xdf.controller.action.blocks.BlocksAction"
		scope="prototype">
		<property name="blocksService">
			<ref bean="blocksService" />
		</property>
	</bean>
	<!-- 模板管理 action -->
	<bean id="templatesAction" class="cn.xdf.controller.action.templates.TemplatesAction"
		scope="prototype">
		<property name="templatesService">
			<ref bean="templatesService" />
		</property>
	</bean>
	<!-- 栏目管理 action -->
	<bean id="catalogsAction" class="cn.xdf.controller.action.catalogs.CatalogsAction"
		scope="prototype">
		<property name="catalogsService">
			<ref bean="catalogsService" />
		</property>
	</bean>
	<!-- 模板标签 action -->
	<bean id="templateMarkAction" class="cn.xdf.controller.action.templates.TemplateMarkAction"
		scope="prototype">
		<property name="templateMarkService">
			<ref bean="templateMarkService" />
		</property>
	</bean>

	<!-- 角色 action -->
	<bean id="rolesAction" class="cn.xdf.controller.action.roles.RolesAction"
		scope="prototype">
		<property name="rolesService">
			<ref bean="rolesService" />
		</property>
		<property name="roleResourceService">
			<ref bean="roleResourceService" />
		</property>
	</bean>

	<!-- 管理员 action -->
	<bean id="managersAction" class="cn.xdf.controller.action.managers.ManagersAction"
		scope="prototype">
		<property name="rolesService">
			<ref bean="rolesService" />
		</property>
		<property name="managersService">
			<ref bean="managersService" />
		</property>
		<property name="managerCatalogService">
			<ref bean="managerCatalogService" />
		</property>
		<property name="catalogsService">
			<ref bean="catalogsService" />
		</property>
	</bean>

	<!-- 乐语管理 action -->
	<bean id="leyuAction" class="cn.xdf.controller.action.leyu.LeyuAction"
		scope="prototype">
		<property name="leyuService">
			<ref bean="leyuService" />
		</property>
	</bean>
	<!-- pc文章 action -->
	<bean id="articleAction" class="cn.xdf.controller.action.article.ArticleAction"
		scope="prototype">
		<property name="articleService">
			<ref bean="articleService" />
		</property>
	</bean>
</beans>
