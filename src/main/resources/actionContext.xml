	  <!-- 频道 action -->
	  <bean id="channelAction" class="com.dihaitech.acomp.controller.action.channel.ChannelAction" scope="prototype">
			<property name="channelService">
				<ref bean="channelService" />
			</property>
	  </bean>
	  
	  <!-- 模板 action -->
	  <bean id="templeteAction" class="com.dihaitech.acomp.controller.action.templete.TempleteAction" scope="prototype">
			<property name="templeteService">
				<ref bean="templeteService" />
			</property>
	  </bean>
	  
	  <!-- 模板标签 action -->
	  <bean id="templeteTagAction" class="com.dihaitech.acomp.controller.action.templeteTag.TempleteTagAction" scope="prototype">
			<property name="templeteTagService">
				<ref bean="templeteTagService" />
			</property>
	  </bean>
	  
	  <!-- 文章栏目 action -->
	  <bean id="articleColumnAction" class="com.dihaitech.acomp.controller.action.articleColumn.ArticleColumnAction" scope="prototype">
			<property name="articleColumnService">
				<ref bean="articleColumnService" />
