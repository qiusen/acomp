<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans default-autowire="byName">

	<!-- 登录登出的Action -->
	<bean id="login" class="com.dihaitech.acomp.controller.action.common.LoginAction"
		scope="prototype">
	</bean>
	
	<!-- 用户角色 action -->
	  <bean id="managerRoleAction" class="com.dihaitech.acomp.controller.action.managerRole.ManagerRoleAction" scope="prototype">
			<property name="managerRoleService">
				<ref bean="managerRoleService" />
			</property>
	  </bean>
	  
	  <!-- 角色 action -->
	  <bean id="roleAction" class="com.dihaitech.acomp.controller.action.role.RoleAction" scope="prototype">
			<property name="roleService">
				<ref bean="roleService" />
			</property>
	  </bean>
	  
	  <!-- 菜单 action -->
	  <bean id="menuAction" class="com.dihaitech.acomp.controller.action.menu.MenuAction" scope="prototype">
