<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans default-autowire="byName">

	<!-- 登录登出的Action -->
	<bean id="login" class="cn.xdf.controller.action.common.LoginAction"
		scope="prototype">
	</bean>
	<!-- 用户个人信息Action -->
	<bean id="userInfo" class="cn.xdf.controller.action.common.UserAction"
		scope="prototype">
	</bean>


	  <!-- 管理员 action -->
	  <bean id="managerAction" class="com.dihaitech.acomp.controller.action.manager.ManagerAction" scope="prototype">
			<property name="managerService">
				<ref bean="managerService" />
			</property>
	  </bean>

</beans>
